<h1 class="text-center mt-4">Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Choose your password" %>
  </p>
  <p>
    <%= f.submit "Log in" %>
  </p>

<% end %>
  
